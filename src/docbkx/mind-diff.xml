			<example>
				<title>Example of Mind Visual Diff output</title>
				<mediaobject>
					<imageobject role="fo">
						<imagedata align="center" fileref="images/diff_helloworld_edited.svg"
							format="SVG" width="80%"/>
					</imageobject>
